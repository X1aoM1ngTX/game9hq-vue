# EditorConfig: https://EditorConfig.org

# 最顶层的 EditorConfig 文件
root = true

# Unix 风格的换行符，并在每个文件末尾添加一个换行符
[*]
end_of_line = lf # 使用 LF
insert_final_newline = true # 强制每个文件末尾添加一个换行符
charset = utf-8 # 使用 UTF-8 编码
trim_trailing_whitespace = true # 删除行尾的空白字符

# 4 个空格缩进
[*.md]
trim_trailing_whitespace = false # 不删除行尾的空白字符
indent_style = tab # 使用 Tab

# 删除行尾的空白字符
[*.{js,jsx,ts,tsx,vue,html,css,scss}]
indent_style = space # 使用空格
indent_size = 2 # 缩进 2 个空格
